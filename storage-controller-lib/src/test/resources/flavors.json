{
  "vanilla": {
    "shared_cluster": true,
    "podSpec": {
      "common": {
        "volumes": [
          {
            "name": "vol-vanilla",
            "emptyDir": {}
          }
        ],
        "containers": [
          {
            "name": "broker",
            "image": "enmasseproject/artemis:latest",
            "ports": [
              {
                "name": "amqp",
                "containerPort": 5673
              },
              {
                "name": "core",
                "containerPort": 61616
              }
            ],
            "volumeMounts": [
              {
                "name": "vol-vanilla",
                "mountPath": "/var/run/artemis"
              }
            ]
          },
          {
            "name": "router",
            "image": "gordons/qdrouterd:latest",
            "ports": [
              {
                "name": "amqp",
                "containerPort": 5672
              }
            ]
          }
        ]
      },
      "anycast": {
        "containers": [
          {
            "name": "broker",
            "lifecycle": {
              "preStop": {
                "exec": {
                  "command": [
                    "/artemis-shutdown-hook/bin/artemis-shutdown-hook"
                  ]
                }
              }
            }
          }
        ]
      },
      "multicast": {
        "containers": [
          {
            "name": "forwarder",
            "image": "enmasseproject/topic-forwarder:latest"
          }
        ]
      }
    }
  },
  "chili": {
    "shared_cluster": false,
    "claimSpec": {
      "name": "claim-chili",
      "accessModes": ["ReadWriteMany"],
      "resources": {
        "requests": {
          "storage": "10Gi"
        }
      }
    },
    "podSpec": {
      "common": {
        "volumes": [
          {
            "name": "vol-chili",
            "persistentVolumeClaim": {
              "claimName": "claim-chili",
              "readOnly": false
            }
          }
        ],
        "containers": [
          {
            "name": "broker",
            "image": "enmasseproject/artemis:latest",
            "ports": [
              {
                "name": "amqp",
                "containerPort": 5673
              },
              {
                "name": "core",
                "containerPort": 61616
              }
            ],
            "volumeMounts": [
              {
                "name": "vol-vanilla",
                "mountPath": "/var/run/artemis"
              }
            ]
          },
          {
            "name": "router",
            "image": "gordons/qdrouterd:latest",
            "ports": [
              {
                "name": "amqp",
                "containerPort": 5672
              }
            ]
          }
        ]
      },
      "anycast": {
        "containers": [
          {
            "name": "broker",
            "lifecycle": {
              "preStop": {
                "exec": {
                  "command": [
                    "/artemis-shutdown-hook/bin/artemis-shutdown-hook"
                  ]
                }
              }
            }
          }
        ]

      },
      "multicast": {
        "containers": [
          {
            "name": "forwarder",
            "image": "enmasseproject/topic-forwarder:latest"
          }
        ]
      }
    }
  }
}
